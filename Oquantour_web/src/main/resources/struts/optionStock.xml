<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
        "http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>
    <package name="optionalStock" extends="json-default,struts-default">
        <action name="addOptionalStock" class="oquantour.action.OptionalStockAction" method="addOptionalStock">
            <result type="json">
                <param name="root">result</param>
            </result>
        </action>

        <action name="deleteOptionalStock" class="oquantour.action.OptionalStockAction" method="deleteOptionalStock">
            <result type="json">
                <param name="root">result</param>
            </result>
        </action>

        <action name="getAllOptionalStock" class="oquantour.action.OptionalStockAction" method="getAllOptionalStock">
            <result type="json">
                <param name="root">result</param>
            </result>
        </action>
    </package>
</struts>