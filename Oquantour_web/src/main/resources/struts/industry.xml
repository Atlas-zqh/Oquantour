<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
        "http://struts.apache.org/dtds/struts-2.1.7.dtd">
<struts>
    <package name="industry" extends="json-default,struts-default">
        <action name="getIndustryTree" class="oquantour.action.IndustryAction" method="getIndustryTree">
            <result type="json">
                <param name="root">result</param>
            </result>
        </action>

        <action name="getStockInIndustry" class="oquantour.action.IndustryAction" method="getStockInIndustry">
            <result type="json">
                <param name="root">result</param>
            </result>
        </action>

        <action name="getAllIndustryName" class="oquantour.action.IndustryAction" method="getAllIndustryName">
            <result type="json">
                <param name="root">result</param>
            </result>
        </action>
    </package>
</struts>